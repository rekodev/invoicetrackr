{
  "name": "invoicetrackr",
  "version": "1.0.0",
  "type": "module",
  "description": "InvoiceTrackr App",
  "main": "index.js",
  "scripts": {
    "client": "pnpm --filter @invoicetrackr/client",
    "server": "pnpm --filter @invoicetrackr/server",
    "types": "pnpm --filter @invoicetrackr/types",
    "emails": "pnpm --filter @invoicetrackr/emails",
    "dev": "concurrently \"pnpm run types dev\" \"pnpm run server dev\" \"pnpm run client dev:turbo\"",
    "build": "pnpm run types build && pnpm run emails build && pnpm run server build && pnpm run client build",
    "lint": "pnpm run client lint && pnpm run server lint",
    "lint:fix": "pnpm run client lint:fix && pnpm run server lint:fix"
  },
  "keywords": [],
  "author": "rekodev",
  "license": "UNLICENSED",
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0"
    }
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "next-auth": "5.0.0-beta.30",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}

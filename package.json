{
  "name": "invoicetrackr",
  "version": "1.0.0",
  "type": "module",
  "description": "InvoiceTrackr App",
  "main": "index.js",
  "scripts": {
    "client": "pnpm --filter @invoicetrackr/client",
    "server": "pnpm --filter @invoicetrackr/server",
    "types": "pnpm --filter @invoicetrackr/types",
    "dev": "concurrently \"pnpm run types dev\" \"pnpm run server dev\" \"pnpm run client dev:turbo\"",
    "build": "pnpm run types build && pnpm run server build && pnpm run client build",
    "lint": "pnpm run client lint && pnpm run server lint",
    "lint:fix": "pnpm run client lint:fix && pnpm run server lint:fix"
  },
  "keywords": [],
  "author": "rekodev",
  "license": "ISC",
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.2",
      "@types/react-dom": "19.0.2"
    }
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "next-auth": "5.0.0-beta.30",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
